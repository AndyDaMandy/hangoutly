<div>
  <div id="users">
  <% for user in @users %>
    <div class="user">
      <p>
        <strong><%= user.username %></strong>
        <%= link_to "Add Friend", friendships_path, :method => :post %>
        <div class="clear"></div>
      </p>
    </div>
  <% end %>
</div>



<p style="color: green"><%= notice %></p>

<h1>Friendships</h1>

<div id="friendships">
  <% @friendships.each do |friendship| %>
    <%= render friendship %>
    <p>
      <%= link_to "Show this friendship", friendship %>
    </p>
  <% end %>
</div>

<%= link_to "New friendship", new_friendship_path %>
